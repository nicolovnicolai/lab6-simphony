{% extends 'base.html.twig' %}

{% block title %}Product
{% endblock %}

{% block body %}
	<h1>Product List</h1>
	<a href="{{ path('product_new') }}">Create new product</a></br></br>
	<table class="table">
		<thead>
			<tr>
				<th>ID</th>
				<th>Product Name</th>
				<th>Price</th>
				<th>Description</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for product in products %}
				<tr>
					<td>{{ product.id }}</td>
					<td>{{ product.name }}</td>
					<td>{{ product.price }}</td>
					<td>{{ product.description }}</td>
					<td>
						<a href="{{ path('product_show', {'id': product.id}) }}">select</a>
						<a href="{{ path('product_edit', {'id': product.id}) }}">update</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">Table is empty</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
